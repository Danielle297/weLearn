<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hackton.welearning.TypeActivity"
    tools:showIn="@layout/activity_type">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageButton
            android:id="@+id/button_upload"
            android:layout_width="117dp"
            android:layout_height="118dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/button_test"
            android:layout_marginBottom="168dp"
            android:src="@drawable/icons_upload_question"
            android:text="@string/upload"
            android:background="#E0562F"/>

        <ImageButton
            android:id="@+id/button_test"
            android:layout_width="117dp"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/icons_take_test"
            android:text="@string/test"
            android:background="#2B9FA5"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
